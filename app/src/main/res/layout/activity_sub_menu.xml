<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSubMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_animation"
    tools:context=".SubMenu">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="356dp"
        android:layout_height="260dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634">

        <Button
            android:id="@+id/btnGargeRegister"
            android:layout_width="180dp"
            android:layout_height="263dp"
            android:layout_marginBottom="20dp"
            android:alpha="2"
            android:background="@drawable/btnshape"
            android:drawableTop="@drawable/serviceprovider"
            android:text="@string/GarageMenuOpt1"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnSearchGarage"
            android:layout_width="180dp"
            android:layout_height="263dp"
            android:layout_marginBottom="20dp"
            android:alpha="2"
            android:background="@drawable/btnshapetwo"
            android:drawableTop="@drawable/search"
            android:text="@string/GargeMenuOpt2"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            app:layout_column="1"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>