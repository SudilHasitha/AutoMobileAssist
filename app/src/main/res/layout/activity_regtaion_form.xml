<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Regtaion_form">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/userImg"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="30dp"

                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/enterFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Full Name"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/fullNameTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:ems="15"
                android:inputType="textEmailAddress"
                android:textColor="#2B9DD7" />

            <TextView
                android:id="@+id/enterGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Gender"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/genderTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/fullNameTextField"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:ems="15"
                android:inputType="textEmailAddress"
                android:textColor="#2B9DD7" />

            <TextView
                android:id="@+id/enterEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Email"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/emailTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:ems="15"
                android:inputType="textEmailAddress"
                android:textColor="#2B9DD7" />


            <TextView
                android:id="@+id/enterTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Contact Number"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/ConNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:ems="15"
                android:inputType="textEmailAddress"
                android:textColor="#2B9DD7" />

            <TextView
                android:id="@+id/enterLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/Address"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:ems="15"
                android:inputType="textEmailAddress"
                android:textColor="#2B9DD7" />


            <Button
                android:id="@+id/signInBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:textColor="#4a4a4a"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>